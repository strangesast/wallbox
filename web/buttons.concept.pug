doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Buttons Concept
    style(type="text/css").
      body {
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      body > .title {
        height: 200px;
        text-transform: uppercase;
        font-family: sans;
      }
      section > .title {
        font-size: 16px;
        margin: 8px 0;
        text-align: center;
        text-transform: uppercase;
        font-family: sans;
        letter-spacing: 10px;
        color: grey;
      }
      .characters {
        display: grid;
        grid-gap: 8px;
        margin-bottom: 70px;
      }
      .letters {
        grid-template-columns: repeat(10, 60px);
        grid-template-rows: repeat(2, 80px);
      }
      .numbers {
        grid-template-columns: repeat(8, 60px);
        grid-template-rows: 0px 80px;
      }
      .volume {
        grid-template-columns: repeat(3, 80px);
        grid-template-rows: 0px 60px;
      }
      .characters > span {
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: sans;
        font-weight: bold;
        font-size: 40px;
        background: white;
        box-sizing: border-box;
        height: 80px;
        width: 60px;
        position: relative;
        #border: 5px solid grey;
      }
      .characters > span:after,
      .characters > span:before {
        content: '';
        background: grey;
        position: absolute;
      }
      .characters > span:after {
        width: 100%;
        height: 16px;
        left: 8px;
        bottom: 0;
        transform: translatey(100%) skewx(45deg);
      }
      .characters > span:before {
        width: 16px;
        height: 100%;
        right: 0;
        transform: translatex(100%) skewy(45deg);
        top: 8px;
      }
      .volume > span {
        width: 80px;
        height: 60px;
        font-size: 20px;
      }
      .characters > span {
        user-select: none;
        transition: transform 0.2s ease, background 0.2s ease;
      }
      .characters > span:hover {
        cursor: pointer;
        transform: translate(5%, 5%);
        background: lightgrey;
      }
      .characters > span:active {
        transform: translate(8%, 8%);
      }

  body
    h1.title Seeburg Consolette
    section
      .title Volume
      .characters.volume
        span LOW
        span MED
        span HIGH
    section
      - var i = 0
      .characters.letters
        while i < 22
          - var char = String.fromCharCode(65 + i++);
          if char != 'I' && char != 'O'
            span= char

    section
      - var j = 0
      .characters.numbers
        while j < 8
          span= ++j
